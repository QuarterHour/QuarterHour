<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tuijiantv_touxiang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:roundAsCircle="true"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:placeholderImage="@mipmap/ic_launcher" />
        <RelativeLayout
            android:layout_toRightOf="@+id/tuijiantv_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            >
        <TextView
            android:id="@+id/tuijiantv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:paddingTop="10dp"

            android:text="我不会貂蝉吖"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/tuijiantv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="2018-01-26 08:00"/>
        </RelativeLayout>
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:text="按钮"
            />
    </RelativeLayout>
    <TextView
         android:id="@+id/tuijiantv_des"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="心怀不惧 方能翱翔于天下"
        android:textColor="#000"
         android:paddingLeft="20dp"
     />
    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/first_pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/second_pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        />
</LinearLayout>
