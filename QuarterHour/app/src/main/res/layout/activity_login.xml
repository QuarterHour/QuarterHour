<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    tools:context="com.example.quarterhour.view.activity.LoginActivity">

    <ImageView
        android:id="@+id/login_fanhui"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/fanhui2"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/login_weixin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login_qita"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:src="@mipmap/weixinlogin"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/login_qq"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login_qita"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:src="@mipmap/qqlogin"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/login_qita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="其他登录方式"
        android:textSize="16dp"
        android:textColor="@color/login_text"/>


</RelativeLayout>
