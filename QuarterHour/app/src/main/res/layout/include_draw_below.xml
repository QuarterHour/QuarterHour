<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_heiye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yueliang_false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:textColor="@color/cehua_fontcolor"
            android:layout_toRightOf="@+id/image_heiye"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            />



        <com.suke.widget.SwitchButton
            android:layout_margin="10dp"
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cehua_wodezuopin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/wodezuopin"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的作品"
                android:textColor="@color/cehua_fontcolor"
                android:layout_toRightOf="@+id/image_heiye"
                android:layout_margin="10dp"
                android:textSize="18dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/cehua_shezhi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/shezhi"
                 />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/cehua_fontcolor"
                android:layout_toRightOf="@+id/image_heiye"
                android:layout_margin="10dp"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
